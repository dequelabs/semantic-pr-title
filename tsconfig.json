{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["dom", "es2020"],
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "removeComments": true
  },
  "exclude": ["**/*.test.ts", "**/test/**/*.ts"],
  "include": ["src"]
}